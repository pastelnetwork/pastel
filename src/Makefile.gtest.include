TESTS += pastel-gtest
noinst_PROGRAMS += pastel-gtest

# tool for generating our public parameters.
# test_checktransaction.cpp MUST be before
# any test that calls SelectParams().
pastel_gtest_SOURCES = \
	gtest/main.cpp \
	gtest/test_utils.cpp \
	gtest/test_utils.h \
	gtest/test_checktransaction.cpp \
	gtest/json_test_vectors.cpp \
	gtest/json_test_vectors.h
# These tests are order-dependent, because they
# depend on global state (see #1539)
if ENABLE_WALLET
pastel_gtest_SOURCES += \
	wallet/gtest/test_wallet_zkeys.cpp
endif
pastel_gtest_SOURCES +=\
	gtest/test_allocator.cpp\
	gtest/test_block.cpp\
	gtest/test_checkblock.cpp\
	gtest/test_circuit.cpp\
	gtest/test_deprecation.cpp\
	gtest/test_equihash.cpp\
	gtest/test_httprpc.cpp\
	gtest/test_keys.cpp\
	gtest/test_keystore.cpp\
	gtest/test_legroast.cpp\
	gtest/test_libzcash_utils.cpp\
	gtest/test_mempool.cpp\
	gtest/test_merkletree.cpp\
	gtest/test_metrics.cpp\
	gtest/test_miner.cpp\
	gtest/test_mnode_governance.cpp\
	gtest/test_mnode_rpc.cpp\
	gtest/test_mnode_pastel.cpp\
	gtest/test_noteencryption.cpp\
	gtest/test_pastelid.cpp\
	gtest/test_pedersen_hash.cpp\
	gtest/test_pow.cpp\
	gtest/test_proofs.cpp\
	gtest/test_random.cpp\
	gtest/test_rpc.cpp\
	gtest/test_sapling_note.cpp\
	gtest/test_secure_container.cpp\
	gtest/test_str_encodings.cpp\
	gtest/test_tautology.cpp\
	gtest/test_transaction_builder.cpp\
	gtest/test_txid.cpp\
	gtest/test_upgrades.cpp\
	gtest/test_validation.cpp\
	gtest/test_zip32.cpp

if ENABLE_WALLET
pastel_gtest_SOURCES += \
	wallet/gtest/test_wallet.cpp
endif

pastel_gtest_CPPFLAGS = $(AM_CPPFLAGS) -DBINARY_OUTPUT -DCURVE_ALT_BN128 -DSTATIC $(BITCOIN_INCLUDES)
pastel_gtest_CXXFLAGS = $(AM_CXXFLAGS) $(PIE_FLAGS)

pastel_gtest_LDADD = -lgtest -lgmock $(LIBBITCOIN_SERVER) $(LIBBITCOIN_CLI) $(LIBBITCOIN_COMMON) $(LIBBITCOIN_UTIL) $(LIBBITCOIN_CRYPTO) $(LIBUNIVALUE) $(LIBLEVELDB) $(LIBMEMENV) \
  $(BOOST_LIBS) $(BOOST_UNIT_TEST_FRAMEWORK_LIB) $(LIBSECP256K1)
if ENABLE_ZMQ
pastel_gtest_LDADD += $(LIBBITCOIN_ZMQ) $(ZMQ_LIBS)
endif
if ENABLE_WALLET
pastel_gtest_LDADD += $(LIBBITCOIN_WALLET)
endif

pastel_gtest_LDADD += $(LIBZCASH_CONSENSUS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS) $(LIBZCASH) $(LIBSNARK) $(LIBZCASH_LIBS)

if ENABLE_PROTON
pastel_gtest_LDADD += $(LIBBITCOIN_PROTON) $(PROTON_LIBS)
endif


pastel_gtest_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) -static

pastel-gtest_check: pastel-gtest FORCE
	./pastel-gtest

pastel-gtest-expected-failures: pastel-gtest FORCE
	./pastel-gtest --gtest_filter=*DISABLED_* --gtest_also_run_disabled_tests
